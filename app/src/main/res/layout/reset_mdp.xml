<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarid"
        android:layout_width="match_parent"

        android:layout_height="186dp"
        android:background="@color/colorblanc"
        android:elevation="0dp"
        android:gravity="center">

        <TextView
            android:layout_width="388dp"
            android:layout_height="156dp"

            android:background="@color/bg_color"
            android:textColor="@color/colorblanc"
            android:textSize="24sp"
            android:textStyle="bold" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/btn_connexion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:text="Récupération mot de passe"
            android:textAllCaps="false"
            android:textColor="@color/colorRed"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_code_validation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/background_input"
            android:hint="Saisir son numéro de téléphone"
            android:inputType=""
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_valider2"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/colorDark"
            android:gravity="center"
            android:text="VALIDER"
            android:textColor="@color/colorblanc" />

    </LinearLayout>

</RelativeLayout>